[user]
    email = simon.robin.info@gmail.com
    name = Simon Robin
    login = simrobin
[credential]
    helper = cache
[core]
    editor = vi
    autocrlf = input
    excludesfile = ~/.gitignore_global
[alias]
    st = status -sb
    df = diff
    co = checkout
    ci = !git add -A && git commit
    undo = reset --soft HEAD^
    adda = add -A
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    wdiff = diff --word-diff --color-words=.
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored = !git ls-files -v | grep "^[[:lower:]]"
    ba = branch -avv
    bd = branch -D
    oops = commit --amend
    ffs = flow feature start
    fff = flow feature finish
    fhs = flow hotfix start
    fhf = flow hotfix finish
    frs = flow release start
    frf = flow release finish
[push]
    default = upstream
# activate color for all commands
[color]
    ui = auto
# diff with meaningful prefix and word-diff will find a letter as a word
[diff]
    mnemonicprefix = true
    wordRegex = .
# commands will be autocorrect (rset -> reset)
[help]
    autocorrect = -1
# remember previous conflict resolutions
[rerere]
    enabled = true
# pull will do a rebase instead of a merge
[pull]
    rebase = true
# merge is looking harder for renames
[merge]
    renamelimit = 3000
