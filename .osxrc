#!/bin/sh

if [ `uname` != 'Darwin' ]; then
  return
fi

function os_clean() {
  directory=${1:-`pwd`}

  echo "Cleaning .DS_Store and ._* files in $directory and subdirectories ..."
  find $directory -name ".DS_Store" -exec rm -f {} \;
  find $directory -name "._*" -exec rm -f {} \;
}

# needs to be installed with homebrew -> `brew install coreutils gnu-sed`
GNUBIN_PATH=/usr/local/opt/coreutils/libexec/gnubin
if [ -d "$GNUBIN_PATH"  ]; then
  export PATH=${GNUBIN_PATH}:${PATH}
  export LS_OPTIONS='--color=auto'
fi

