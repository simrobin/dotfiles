#!/bin/sh

RED="\[\033[01;91m\]"
GREEN="\[\033[01;92m\]"
BLUE="\[\033[0;94m\]"
CYAN="\[\033[01;96m\]"
PURPLE="\[\033[01;95m\]"
RESET="\[\033[0m\]"

GITINFO=""
if [ `which git 2>/dev/null | wc -l` -eq 1 ]; then
  GITINFO="${RED}\$(git_info)${RESET}"
fi

export PS1="${GREEN}\u@\h${RESET} ${CYAN}\w${RESET}${RED}${GITINFO}${RESET}\n${PURPLE}>${RESET} "
